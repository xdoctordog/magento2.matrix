<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Magento/Backend/etc/system_file.xsd">
    <system>
        <tab id="doctordoggsystemtab" translate="label" sortOrder="99">
            <label>Doctordogg</label>
        </tab>
        <section id="doctordoggsystemtab_section" translate="label" sortOrder="99" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>DoctorDogg Custom Setting</label>
            <tab>doctordoggsystemtab</tab>
            <resource>Doctordogg_HelloWorldVMMV::config</resource>
            <group id="general" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General_Configuration</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="1" showInDefault="1" showInStore="1" showInWebsite="1" >
                    <label>Module Title</label>
                    <comment>This text will be set later.</comment>
                </field>
            </group>
        </section>
    </system>
</config>